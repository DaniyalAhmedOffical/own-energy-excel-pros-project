                <a href="../views/settings" id="settings">
                  <div class="nav-button">SETTINGS</div>
                </a>
                <% } %>

    </div>
    <div id="main">
      <div id="searchDiv" style=" justify-content: space-between;">

        <button class="btn btn-info" data-toggle="modal" id="addbtn"
          onclick="document.getElementById('addAccessLevelModal').style.display='block'" style="width: 100%;">
          <p style="display: inline-block;font-size: 1.5rem;vertical-align: middle;">ADD
            LEVEL</p>
        </button>

      </div>
      <div class="table-div">
        <table id="dataTable" class="table ">
          <thead>
            <tr>
              <th style="font-weight:normal"></th>
            </tr>
          </thead>
          <tbody id="users-table">
            <% accessLevels.forEach(accessLevel=>{ %>
              <% var name=accessLevel.Level %>

                <tr class="dataRow" style="text-align: center;">
                  <td>
                    <a href="../views/roleAccess?aId=<%=accessLevel.id%>" class="navigation">
                      <%= name %>
                    </a>
                  </td>

                </tr>
                <% }); %>

          </tbody>

