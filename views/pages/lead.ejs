  <title>Lead</title>
  <style>
    @media screen and (max-width: 900px) {
      body {
        background-image: url('../lead\ input\ form.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
        text-align: center;
      }

      .main {
        display: grid;
        margin: 10px;
        grid-template-columns: 1fr;
        grid-template-rows: 0.2fr 0.1fr 1.2fr;

        grid-template-areas:
          "logo"
          "pgTitle"
          "main";

        <% if (data.superadmin) {
          %>grid-template-areas:
            "logo"
            "pgTitle"
            "projectStatus"
            "main"
            "notes"
            "adminPanel";
          <%
        }

        else {
          %>grid-template-areas:
            "logo"
            "pgTitle"
            "projectStatus"
            "main"
            "notes";
          <%
        }

        %>grid-gap: 3px;
        height: 100vh;
      }

      #pgTitle {
        grid-area: pgTitle;
        background: #1c617b;
        border-bottom-left-radius: 20px;
        text-align: center;
      }

      #navBar {
        display: none;
      }

      div {
