    div {
      border: 0 none;
      padding: 20px 30px;
      color: #fff;
    }

    #deleteLeadModal {
      padding: 0px;
    }

    #logo {
      grid-area: logo;
    }

    #pgTitle {
      background: #1c617b;
      grid-area: pgTitle;
    }

    #navBar {
      grid-area: navBar;
      padding-left: 0px;
    }

    #main {
      grid-area: main;
      text-align: left;
    }

    #leadsBx {
      grid-area: leadsBx;
    }

    #projectsBx {
      grid-area: projectsBx;
      display: none;
    }

    #payrollBx {
      grid-area: payrollBx;
      margin-bottom: 0.4rem;
      display: none;
    }

    #adminPanel {
      grid-area: adminPanel;

      <% if ( !data.superadmin) {
        %>display: none;
        <%
      }

      %>
    }

    #notes {
      grid-area: notes;

    }

    #projectStatus {
      grid-area: projectStatus;
    }


    a:link {
      text-decoration: none;
    }

    a:visited {
      text-decoration: none;
    }

    a:hover {
      text-decoration: none;
    }

    a:active {
      text-decoration: none;
    }


    td,
    th {
      padding: 15px;
      text-align: left;
    }

    th {
      font-weight: bold;
    }

    * {
      box-sizing: border-box
    }

    /* Set a style for all buttons */
    button {
      color: white;
      padding: 14px 20px;
      margin: 20px 0;
      border: none;
      cursor: pointer;
      width: 100%;
      opacity: 0.9;
    }

    button:hover {
      opacity: 1;
    }

    /* Float cancel and delete buttons and add an equal width */
    .cancelbtn,
    .deletebtn {
      width: 50%;
      border-radius: 20px;
    }

    /* Add a color to the cancel button */
    .cancelbtn {
      background-color: #ccc;
      color: black;
    }

    /* Add a color to the delete button */
    .deletebtn {
      background-color: #f44336;
    }

    /* Add padding and center-align text to the container */
    .container {
      padding: 16px;
      text-align: center;
    }

    .clearfix {
      box-shadow: 0 0 0px 0px rgba(0, 0, 0, 0);
    }

    /* The Modal (background) */
    .modal {
      display: none;
      /* Hidden by default */
      position: fixed;
      /* Stay in place */
      z-index: 1;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: auto;
      /* Enable scroll if needed */
      /* background-color: #474e5d; */
      backdrop-filter: blur(5px);
      padding-top: 50px;
    }

    /* Modal Content/Box */
    .modal-content {
      border-radius: 20px;
      background-color: #fefefe;
      margin: 5% auto 15% auto;
      /* 5% from the top, 15% from the bottom and centered */
      border: 1px solid #888;
      width: 80%;
      max-width: 750px;
      /* Could be more or less, depending on screen size */
    }

    /* Style the horizontal ruler */
    hr {
      border: 1px solid #f1f1f1;
      margin-bottom: 25px;
    }


    /* Clear floats */
    .clearfix::after {
      content: "";
      clear: both;
      display: table;
    }

    /* Change styles for cancel button and delete button on extra small screens */
    @media screen and (max-width: 300px) {

      .cancelbtn,
      .deletebtn {
        width: 100%;
      }
    }

    select {
      margin-top: 5px;
      background-color: #1c617b;
      font-size: 18px;
      width: 150px;
      height: 40px;
      color: #FFF;
      border-radius: 10px;
      padding: 10px 5px;
    }

    .statusBox {
      margin-top: 5px;
      background-color: #1c617b;
      font-size: 18px;
      width: 150px;
      height: 40px;
      color: #FFF;
      border-radius: 10px;
      padding: 12px 10px;
    }

    @media screen and (max-width: 900px) {
      .action-button {
        width: 80%;
      }
    }

    .action-button {
      width: 150px;
      height: 40px;
      background: #1c617b;
      font-size: 18px;
      color: white;
      border: 0 none;
      border-radius: 10px;
      display: inline-block;

      cursor: pointer;
      padding: 10px 5px;
      margin: 10px 0px;
    }

    .action-button:hover,
    .action-button:focus {
      box-shadow: 0 0 0 2px white, 0 0 0 3px #0A4069;
    }

    .searchable-dropdown {
      max-width: 400px;
    }

    .searchable-dropdown {
      margin: 0px auto 50px auto;
      position: relative;
    }

    .caret {
      background: aquamarine;
      border-radius: 10px;
      font-size: 22px;
      height: 30px;
      position: absolute;
      pointer-events: none;
      right: -10px;
      text-align: center;
      top: 5px;
      width: 30px;
    }

    .caret:after {
      content: "\279C";
      position: absolute;
      right: 3px;
      top: 0;
      transform: rotate(90deg);
    }

    #newRep {
      background: rgba(0, 0, 0, 0.1);
      border: 0;
      border-radius: 10px;
      font-size: 26px;
      margin: 0;
      padding: 5px 10px;
      width: 100%;
    }

    ul {
      background: rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      max-height: 200px;
      list-style: none;
      margin: 0;
      overflow-y: auto;
      padding: 10px;
      position: absolute;
      top: 45px;
      width: 100%;
    }

    ul .active {
      display: block;
    }

    ul li {
      font-size: 18px;
      padding: 10px;
    }

    ul li:hover {
      background: aquamarine;
      cursor: pointer;
    }
  </style>

</head>

<body>
  <main class="main">
    <a id="logo" href="../">
      <img class="top-image" src="../own+menu+logo-removebg-preview.png"
        style="line-height: 1;width: 250px; margin: 10px; text-align:center;" alt="Own Energy">
    </a>
    <div id="pgTitle" class="">
      <%= lead.firstName.toUpperCase() + ' ' + lead.lastName.toUpperCase() %>
    </div>
    <div id="navBar" class="">
      <a href="../views/leads" id="list">
        <div class="nav-button">LEADS</div>
      </a>
      <a href="../views/leads" id="project">
        <div class="nav-button">PROJECTS</div>
      </a>


      <% if (data.admin) {%>
        <a href="../payments" id="payment">
          <div class="nav-button">PAYMENTS</div>
        </a>
        <a href="../expenses" id="expenses">
          <div class="nav-button">EXPENSES</div>
        </a>
        <% } %>

          <% if (data.manager) {%>
            <a href="../views/users" id="users">
              <div class="nav-button">USERS</div>
            </a>
            <% } %>
    </div>
    <div id="main" class="rounded">
      <table>
        <tr>
          <th>Name:</td>
          <td>
            <%= lead.firstName + ' ' + lead.lastName %>
          </td>
        </tr>
        <tr>
          <th>Email:</td>
          <td>
            <%= lead.email %>
          </td>
        </tr>
        <tr>
          <th>Phone:</td>
          <td>
            <%= lead.phone %>
          </td>
        </tr>
        <tr>
          <th>Address:</td>
          <td>
            <%= lead.street + ' ' + lead.city + ', ' + lead.state + ' ' + lead.zip %>
          </td>
        </tr>
        <tr>
          <th>Date Created:</td>
          <td>
            <%= lead.dateCreated %>
          </td>
        </tr>
        <tr>
          <th>Appointment:</td>
          <td>
            <%= lead.appointmentTime %>
          </td>
        </tr>
        <tr id="repRow">
          <th>Rep:</td>
          <td>
            <p id="repDisplay" style="display: inline;">
              <%= lead.rep %>
            </p>

            <% if(canEditRep) { %>
              <img class="repToggle" id="repEditIcon" src="../edit.png" alt="Edit Rep" width="20" height="20">
              <form id="editRep" action="/api/editRep" method="post" style="display: none;">
                <input type="hidden" name="leadId" value="<%= lead.id %>" />
                <input type="hidden" id="newRepId" name="repId" />

                <!-- <input id="newRepOld" maxlength="40" name="newRep" size="20" type="text" placeholder="<%= lead.rep %>" /> -->
                <div class="searchable-dropdown js-searchable-dropdown">
                  <input type="text" id="newRepName" name="newRep" class="js-searchable-dropdown-input"
                    placeholder="Search Users..." oninput='getUsers("newRepName", "newRepId", "dropdown-list-rep")'>
                  <ul class="js-searchable-dropdown-list" id="dropdown-list-rep">
                    <li class="js-list-empty">No Matching Users</li>
                  </ul>
                </div>

                <input type="image" src="../check.png" border="0" alt="Submit" width="20" height="20" />
                <img class="repToggle" src="../remove.png" alt="Cancel" width="20" height="20">
              </form>
              <% } %>

          </td>
        </tr>
        <tr id="setRow">
          <th>Setter:</td>
          <td>
            <p id="setterDisplay" style="display: inline;">
              <%= lead.setter %>
            </p>
            <% if(canEditSetter) { %>
              <img class="setterToggle" id="setterEditIcon" src="../edit.png" alt="Edit Setter" width="20" height="20">
              <form id="editSetter" action="/api/editSetter" method="post" style="display: none;">
                <input type="hidden" name="leadId" value="<%= lead.id %>" />
                <input type="hidden" id="newSetterId" name="setterId" />

                <div class="searchable-dropdown js-searchable-dropdown">
                  <input type="text" id="newSetterName" name="newSetter" class="js-searchable-dropdown-input"
                    placeholder="Search Users..."
                    oninput='getUsers("newSetterName", "newSetterId", "dropdown-list-setter")'>
                  <ul class="js-searchable-dropdown-list" id="dropdown-list-setter">
                    <li class="js-list-empty">No Matching Users</li>
                  </ul>
                </div>

                <input type="image" src="../check.png" border="0" alt="Submit" width="20" height="20" />
                <img class="setterToggle" src="../remove.png" alt="Cancel" width="20" height="20">
              </form>
              <% } %>
          </td>
        </tr>
        <tr id="locationRow">
          <th>Location:</td>
          <td>
            <p id="locationDisplay" style="display: inline;">
              <%= lead.location %>
            </p>

            <% if(canEditLocation) { %>
              <img class="locationToggle" id="locationEditIcon" src="../edit.png" alt="Edit Location" width="20"
                height="20">
              <form id="editLocation" action="/api/editLocation" method="post" onsubmit="setLocation()"
                style="display: none;">
                <input type="hidden" name="leadId" value="<%= lead.id %>" />
                <input type="hidden" id="newLocationId" name="locationId" />

                <select id="locationDropdown">

                  <% locationsArray.forEach(location=> { %>
                    <% if (location.id==lead.locationId){ %>
                      <option selected value="<%= location.id %>">
                        <%= location.name %>
                      </option>
                      <% }else{ %>
                        <option value="<%= location.id %>">
                          <%= location.name %>
                        </option>
                        <% } %>
                          <% }) %>

                </select>

                <input type="image" src="../check.png" border="0" alt="Submit" width="20" height="20" />
                <img class="locationToggle" src="../remove.png" alt="Cancel" width="20" height="20">
              </form>
              <% } %>
          </td>
        </tr>
        <tr>
          <th>Notes:</td>
          <td>
            <%= lead.notes %>
          </td>
        </tr>
        <tr id="utilBill">
          <th>Utility Bill:</td>
          <td>
            <a href="<%= lead.utilPic %>">View Utility Bill</a>
          </td>
        </tr>
      </table>
    </div>
    <div id="projectStatus" class="rounded">
      <h2>Status</h2>
      <% if(canEditStatus && leadApptOutcomeName !='Sold' ) { %>
        <form method="POST" action="/changeLeadStatus?lId=<%= lead.id %>">
          <select name="newStatus">
            <% for (let i=0; i < allApptOutcomes.length; i++) { %>
              <% if(allApptOutcomes[i].id==lead.status){ %>
                <option selected value="<%= allApptOutcomes[i].id %>">
                  <%= allApptOutcomes[i].name %>
                </option>
                <% }else{ %>
                  <option value="<%= allApptOutcomes[i].id %>">
                    <%= allApptOutcomes[i].name %>
                  </option>
                  <% } %>
                    <% } %>
          </select>
          <input type="submit" class="action-button" value="Update Status">
        </form>
        <% } else{ %>
          <div class="statusBox">
            <%= leadApptOutcomeName %>
          </div>
          <% } %>

    </div>
    <div id="notes" class="rounded">
      <h2>Notes</h2>
    </div>
    <div id="adminPanel" class="rounded">
      <h2>Admin Panel</h2>
      <!-- modal delete -->
      <button class="deletebtn" onclick="document.getElementById('deleteLeadModal').style.display='block'">DELETE
        LEAD</button>
      <div id="deleteLeadModal" class="modal">
        <form id="deleteForm" class="modal-content" method="POST" onsubmit="setAction()" enctype="multipart/form-data">
          <div class="container">
            <h1 style="color: black;">Delete Lead</h1>
            <p style="color: black;">Are you sure you want to delete this lead?</p>
            <div class="clearfix">
              <button type="button" class="cancelbtn"
                onclick="document.getElementById('deleteLeadModal').style.display='none'">CANCEL</button>
              <button type="submit" class="deletebtn">DELETE LEAD</button>
            </div>
          </div>
        </form>
      </div>



    </div>
  </main>

</body>

<script>
  // Get the modal
  var modal = document.getElementById('deleteLeadModal');

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function (event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
</script>

