<script>
  $(document).ready(function () {

    $(".accessLevelToggle").click(function () {
      $("#accessLevelDisplay").toggle();
      $("#editAccessLevel").toggle();
      $("#accessLevelEditIcon").toggle();
    });
    $(".locationToggle").click(function () {
      $("#locationDisplay").toggle();
      $("#editLocation").toggle();
      $("#locationEditIcon").toggle();
    });

  });
</script>
<script>
  // Get the modal
  var deleteModal = document.getElementById('deleteUserModal');
  var resetPasswordModal = document.getElementById('resetPasswordModal');

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function (event) {
    if (event.target == deleteModal) {
      deleteModal.style.display = "none";
    } else if (event.target == resetPasswordModal) {
      resetPasswordModal.style.display = "none";
    }
  }
</script>

