  <style>
    @media screen and (max-width: 900px) {
      body {
        background-image: url('../lead\ input\ form.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
        text-align: center;
      }

      .main {
        display: grid;
        margin: 10px;
        grid-template-columns: 1fr;
        grid-template-rows: 0.2fr 0.1fr 1.2fr 1fr 1fr 1fr;

        grid-template-areas:
          "logo"
          "pgTitle"
          "main"
          "leadsBx"
          "projectsBx"
          "payrollBx";

        grid-gap: 3px;
        height: 100vh;
      }

      #pgTitle {
        grid-area: pgTitle;
        background: #1c617b;
        border-bottom-left-radius: 20px;
        text-align: center;
      }

      #navBar {
        display: none;
      }

      div {
        border-radius: 20px;
        background: #131F28;
        box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
      }

      .clearfix,
      .container {
        background-color: #fff;
      }


      #deleteUserModal,
      #resetPasswordModal {
        background: none;
      }

      #main {
        text-align: center;
      }

    }

    @media screen and (min-width: 900px) {
      body {
        background-image: url('../bgDesktop.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        background-size: cover;

      }

      #logo {
        margin-left: 8%;
      }

      .main {
        display: grid;
        grid-template-columns: 0.6fr 1fr 1fr;
        grid-template-rows: 0.2fr 1fr 1fr 1fr;

        grid-template-areas:
          "logo logo pgTitle"
          "navBar main main"
          "navBar leadsBx leadsBx"
          "navBar leadsBx leadsBx";
        grid-gap: 0.4rem 0.4rem;
        height: 100vh;
        margin-right: 0.4rem;
      }

      .rounded {
        border-radius: 20px;
        background: #131F28;
        box-shadow: 0 0 15px 1px rgba(0, 0, 0, 0.4);
      }

      #pgTitle {
        margin-top: 10px;
        font-size: large;
      }

      #navBar {
        background: #131F28;
        border-top-right-radius: 20px;
      }

      .nav-button {
        background: #1c617b;
        margin-top: 5px;
        border-bottom-right-radius: 20px;
        border-top-right-radius: 20px;
        font-weight: bold;
      }
    }

    div {
      border: 0 none;
      padding: 20px 30px;
      color: #fff;
    }

    #deleteUserModal,
    #resetPasswordModal {
      padding: 0px;
    }

    #logo {
      grid-area: logo;
    }

    #pgTitle {
      background: #1c617b;
      grid-area: pgTitle;
    }

    #navBar {
      grid-area: navBar;
      padding-left: 0px;
    }

    #main {
      grid-area: main;
      /* text-align: left; */
    }

    #leadsBx {
      grid-area: leadsBx;
    }

    #projectsBx {
      grid-area: projectsBx;
      display: none;
    }

    #payrollBx {
      grid-area: payrollBx;
      margin-bottom: 0.4rem;
      display: none;
    }

    a:link {
      text-decoration: none;
    }

    a:visited {
      text-decoration: none;
    }

    a:hover {
      text-decoration: none;
    }

    a:active {
      text-decoration: none;
    }

    table {
      width: 50%;
    }

    td,
    th {
      padding: 15px;
      text-align: left;
    }

    th {
      font-weight: bold;
    }

    select {
      margin-top: 5px;
      background-color: #1c617b;
      font-size: 18px;
      width: 150px;
      height: 40px;
      color: #FFF;
      border-radius: 10px;
      padding: 10px 5px;
    }

    /* Float cancel and delete buttons and add an equal width */
    .cancelbtn,
    .deletebtn,
    .resetPasswordbtn {
      /* width: 50%; */
      border-radius: 20px;
      max-width: 250px;
    }

    /* Add a color to the cancel button */
    .cancelbtn {
      background-color: #ccc;
      color: black;
    }

    /* Add a color to the delete button */
    .deletebtn {
      background-color: #f44336;
    }

    .resetPasswordbtn {
      background-color: #32AEDB;
    }

    /* Add padding and center-align text to the container */
    .container {
      padding: 16px;
      text-align: center;
    }

    .clearfix {
      box-shadow: 0 0 0px 0px rgba(0, 0, 0, 0);
    }

    /* Set a style for all buttons */
    button {
      color: white;
      padding: 14px 20px;
      margin: 10px 0;
      border: none;
      cursor: pointer;
      width: 100%;
      opacity: 0.9;
    }

    button:hover {
      opacity: 1;
    }

    #deleteForm,
    #resetPasswordForm {
      margin-top: 200px;
      margin-bottom: 200px;
    }

    /* The Modal (background) */
    .modal {
      display: none;
      /* Hidden by default */
      position: fixed;
      /* Stay in place */
      z-index: 1;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: auto;
      /* Enable scroll if needed */
      /* background-color: #474e5d; */
      backdrop-filter: blur(5px);
      padding-top: 50px;
    }


    /* Modal Content/Box */
    .modal-content {
      border-radius: 20px;
      background-color: #fefefe;
      margin: 5% auto 15% auto;
      /* 5% from the top, 15% from the bottom and centered */
      border: 1px solid #888;
      width: 80%;
      max-width: 750px;
      /* Could be more or less, depending on screen size */
    }

    /* Change styles for cancel button and delete button on extra small screens */
    @media screen and (max-width: 300px) {

      .cancelbtn,
      .deletebtn,
      .resetPasswordbtn {
        width: 100%;
      }
    }

    .container {
      display: block;
      margin-bottom: 10px;
      padding: 15px;
      text-align: center;
      /* background-color: #fff; */
      border-radius: 4px;
    }

    /*Start | On-Off Button Design*/
    .btn-onoff {
      position: relative;
      display: inline-block;
      vertical-align: middle;
    }

    .btn-onoff input {
      display: block;
      position: absolute;
      opacity: 0
    }

    .btn-onoff span {
      position: relative;
      display: block;
      width: 115px;
      height: 34px;
      border-radius: 40px;
      background: #ccc;
      border: 1px solid #ccc;
      -webkit-transition: 400ms;
      -moz-transition: 400ms;
      -ms-transition: 400ms;
      transition: 400ms
    }

    .btn-onoff input:checked~span {
      border: 1px solid #4CAF50;
      background: #4CAF50
    }

    .btn-onoff input~span:before {
      content: 'INACTIVE';
      display: block;
      width: 34px;
      height: 34px;
      position: absolute;
      right: 37px;
      font-size: 14px;
      font-family: "Arial";
      font-weight: bold;
      line-height: 34px;
      color: #444;
      padding: 0px 8px;
      letter-spacing: 1px;
      text-transform: uppercase;
      -webkit-transition: 500ms;
      -moz-transition: 500ms;
      -ms-transition: 500ms;
      transition: 500ms
    }

    .btn-onoff input:checked~span:before {
      content: 'ACTIVE';
      right: 55px;
      color: #fff
    }

    .btn-onoff input~span:after {
      content: '';
      position: absolute;
      width: 26px;
      height: 26px;
      top: 4px;
      left: 4px;
      background: #fff;
      border-radius: 50%;
      -webkit-transition: 400ms;
      -moz-transition: 400ms;
      -ms-transition: 400ms;
      transition: 400ms
    }

    .btn-onoff:hover input~span:after {
      -webkit-transform: scale(0.9);
      -moz-transform: scale(0.9);
      -ms-transform: scale(0.9);
      transform: scale(0.9)
    }

    .btn-onoff input:checked~span:after {
      content: '';
      left: 82px;
    }



    /*End | On-Off Button Design*/
  </style>

</head>

<body>
  <main class="main">
    <a id="logo" href="../">
      <img class="top-image" src="../own+menu+logo-removebg-preview.png"
        style="line-height: 1;width: 250px; margin: 10px; text-align:center;" alt="Own Energy">
    </a>
    <div id="pgTitle" class="">
      <%= userDoc.name.toUpperCase() %>
    </div>
    <div id="navBar" class="">
      <a href="../views/leads" id="list">
        <div class="nav-button">LEADS</div>
      </a>
      <a href="../views/leads" id="project">
        <div class="nav-button">PROJECTS</div>
      </a>


      <% if (data.admin) {%>
        <a href="../payments" id="payment">
          <div class="nav-button">PAYMENTS</div>
        </a>
        <a href="../expenses" id="expenses">
          <div class="nav-button">EXPENSES</div>
        </a>
        <% } %>

          <% if (data.manager) {%>
            <a href="../views/users" id="users">
              <div class="nav-button">USERS</div>
            </a>
            <% } %>
    </div>
    <div id="main" class="rounded">
      <table>
        <tr>
          <th>Name:</td>
          <td>
            <%= userDoc.name %>
          </td>
        </tr>
        <tr>
          <th>Email:</td>
          <td>
            <%= userDoc.email %>
          </td>
        </tr>
        <tr>
          <th>Access Level:</td>
          <td>
            <p id="accessLevelDisplay" style="display: inline;">
              <%= userDoc.accessLevelName %>
            </p>

            <% if(canEditAccessLevel){ %>
              <img class="accessLevelToggle" id="accessLevelEditIcon" src="../edit.png" alt="Edit Access Level"
                width="20" height="20">
              <form id="editAccessLevel" action="/api/editAccessLevel" method="post" onsubmit="setAccessLevel()"
                style="display: none;">
                <input type="hidden" name="userId" value="<%= userDoc.id %>" />
                <input type="hidden" id="newAccessLevelId" name="accessLevelId" />

                <select id="accessLevelDropdown">
                  <% allAccessLevels.forEach(accessLevel=> { %>
                    <% if (accessLevel.id==userDoc.accessLevel){ %>
                      <option selected value="<%= accessLevel.id %>">
                        <%= accessLevel.Level %>
                      </option>
                      <% }else{ %>
                        <option value="<%= accessLevel.id %>">
                          <%= accessLevel.Level %>
                        </option>
                        <% } %>
                          <% }) %>
                </select>

                <input type="image" src="../check.png" border="0" alt="Submit" width="20" height="20" />
                <img class="accessLevelToggle" src="../remove.png" alt="Cancel" width="20" height="20">
                <% } %>
              </form>
          </td>
        </tr>
        <tr>
          <th>Availability:</td>
          <td>
            <%= userDoc.available %>
          </td>
        </tr>
        <tr>
          <th>Calendar ID:</th>
          <td>
            <%= userDoc.calId %>
          </td>
        </tr>
        <tr>
          <th>Activity:</th>
          <td>
            <label class="btn-onoff">
              <% if (userDoc.active==true) { %>
                <input type="checkbox" id="active" name="active" data-onoff="toggle" checked onclick="updateActivity()">
                <% } else{%>
                  <input type="checkbox" id="active" name="active" data-onoff="toggle" onclick="updateActivity()">
                  <% } %>
                    <span></span>
            </label>
          </td>
        </tr>
        <tr>
          <th>Location:</th>
          <td>
            <p id = "locationDisplay" style = "display: inline;">
              <%= userDoc.location.name%>
            </p>

            <img class="locationToggle" id="locationEditIcon" src="../edit.png" alt="Edit Location" width="20" height="20" style="display: inline;">
            <form id = "editLocation" action = "/api/editUserLocation" method = "post" onsubmit="setLocation()" style="display: none;">
      
              <input type="hidden" name="userId" value="<%= userDoc.id %>" />
                <input type="hidden" id="newLocationId" name="locationId" />

                <select id="locationDropdown">
                  <% locationsArray.forEach(location=> { %>

                    
                    <% if (location.id==userDoc.locationId){ %>
                      <option selected value="<%= location.id %>">
                        <%= location.name %>
                      </option>
                      <% }else{ %>
                        <option value="<%= location.id %>">
                          <%= location.name %>
                        </option>
                        <% } %>


                          <% }) %>
                </select>
              
              <input type="image" src="../check.png" border="0" alt="Submit" width="20" height="20" />
              <img class="locationToggle" src="../remove.png" alt="Cancel" width="20" height="20">
            </form>
          </td>
        </tr>
      </table>

      <button class="deletebtn" onclick="document.getElementById('deleteUserModal').style.display='block'">DELETE
        USER</button>

      <div id="deleteUserModal" class="modal">
        <form id="deleteForm" class="modal-content" method="POST" onsubmit="setDeleteAction()"
          enctype="multipart/form-data">
          <div class="container">
            <h1 style="color: black;">Delete User</h1>
            <p style="color: black;">Are you sure you want to delete this user?</p>
            <div class="clearfix">
              <button type="submit" class="deletebtn">DELETE USER</button>
              <button type="button" class="cancelbtn"
                onclick="document.getElementById('deleteUserModal').style.display='none'">CANCEL</button>
            </div>
          </div>
        </form>
      </div>

      <button class="resetPasswordbtn"
        onclick="document.getElementById('resetPasswordModal').style.display='block'">RESET
        PASSWORD</button>
      <div id="resetPasswordModal" class="modal">
        <form id="resetPasswordForm" class="modal-content" method="POST" onsubmit="setResetPasswordAction()"
          enctype="multipart/form-data">
          <div class="container">
            <h1 style="color: black;">Reset Password</h1>
            <p style="color: black;">Click the button to send the user a reset password email.</p>
            <div class="clearfix">
              <button type="submit" class="resetPasswordbtn">RESET PASSWORD</button>
              <button type="button" class="cancelbtn"
                onclick="document.getElementById('resetPasswordModal').style.display='none'">CANCEL</button>
            </div>
          </div>
        </form>
      </div>

    </div>
    <div id="leadsBx" class="rounded">LEADS - UNDER DEVELOPMENT</div>
    <div id="projectsBx" class="rounded">PROJECTS - UNDER DEVELOPMENT</div>
    <div id="payrollBx" class="rounded">PAYROLL - UNDER DEVELOPMENT</div>
  </main>
</body>

