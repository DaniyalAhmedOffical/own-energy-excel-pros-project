<script>

  function setAccessLevel() {
    var select = document.getElementById("accessLevelDropdown");
    var value = select.value;

    document.getElementById('newAccessLevelId').value = value
  }

  function setDeleteAction() {
    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    var userToDelete = urlParams.get('uId');

    document.getElementById('deleteForm').action = '/api/deleteUser?userId=' + userToDelete
